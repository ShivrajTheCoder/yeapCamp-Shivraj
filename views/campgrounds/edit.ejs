<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" value="<%=campground.title%>" name="campground[title]" required>
                </div>
                <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" class="form-control" value="<%=campground.location%>" name="campground[location]" required>
                </div>
                <div class="mb3">
                    <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="price-label">$</span>
                    </div>
                    <input type="number" name="campground[price]" id="price" class="form-control" value="<%=campground.price%>" aria-label="price" aria-describedby="price-label" required>
                  </div>
                </div>
                <div class="mb-3">
                <label for="image" class="form-label">Image url</label>
                <input type="text" id="image" class="form-control" value="<%=campground.image%>" name="campground[image]" required>
                </div>
                <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" id="description" class="form-control" name="campground[description]" required>value="<%=campground.description%>"</textarea> 
                </div>
                <div class="mb-3">
                <button class="btn btn-info">Save Edit</button>
                </div>
            </form>
        
            <a href="/campgrounds/<%=campground._id%>">Back to campground</a>
        </div>
    </div>
